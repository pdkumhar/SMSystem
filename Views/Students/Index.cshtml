@model IEnumerable<SMSystem.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<h1>Students List</h1>

<!-- Add New Student Button -->
<a href="@Url.Action("Create", "Students")" class="btn btn-success mb-3">Add New Student</a>

<table class="table">
    <thead>
        <tr>
            <th>SrNo</th>
            <th>RollNumber</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Class</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Photograph</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.SrNo</td>
                <td>@student.RollNumber</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Class</td>
                <td>@student.Mobile</td>
                <td>@student.Email</td>
                <td>
                    <!-- Display the image -->
                    <img src="@student.Photograph" alt="Student Photograph" width="100" height="100" />
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Students", new { id = student.SrNo })">Edit</a> |
                    <a href="@Url.Action("Delete", "Students", new { id = student.SrNo })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
